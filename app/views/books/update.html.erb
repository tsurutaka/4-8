<body>
<% if @book.errors.any? %>
      <ul style ="color: red">
        <%= @book.errors.count %>error!
        <% @book.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
      </ul>
<% end %>

  <h1>Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>
  <div class = "edit_text">Title</div>
  <%= f.text_field :title %>
  <div class = "edit_text">Body</div>
  <%= f.text_area :body %>
  <br><%= f.submit 'Update Book' %></br>
  <br>
  <%= link_to "Show", book_path(@book.id) %> |
  <a class="back" href="/books">Back</a>
  <br>
<% end %>
</body>