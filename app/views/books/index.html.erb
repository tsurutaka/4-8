<html>
   <body>
    <p class= "flash_success"><%= notice %></p>
    <% if @book.errors.any? %>
      <ul style ="color: red">
        <%= @book.errors.count %>error!
        <% @book.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
      </ul>
    <% end %>
    <h1>Books</h1>

    <table>
      <thead>
         <tr>
         <th>Title</th>
         <th>Body</th>
         <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
             <th><%=  book.title %></th>
             <th><%=  book.body %></th>
             <th><%= link_to "Show", book_path(book.id) %></th>
             <th><%= link_to "Edit", edit_book_path(book.id) %></th>
             <th><%= link_to "Destroy", destroy_book_path(book.id), method: :delete,"data-confirm" => "Are you sure?" %></th>
            </section>
          </tr>
        <% end %>

      </tbody>
    </table>

  <h1>NEW BOOK</h1>
   <%= form_with model:@book, url:'/books', local:true do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <br><%= f.submit 'Create Book' %></br>

  <% end %>
  </body>
</html>